  }
</style>

<script>
  // åˆå§‹åŒ–ç›®éŒ„åŠŸèƒ½
  function initTableOfContents() {
    const tocContainer = document.getElementById('table-of-contents');
    const tocList = document.getElementById('toc-list');
    
    if (!tocContainer || !tocList) {
      return;
    }

    // æŸ¥æ‰¾æ–‡ç« ä¸­çš„æ¨™é¡Œ - åªé¸æ“‡ h2
    const headings = document.querySelectorAll('h2, .prose h2, article h2');
    
    if (headings.length === 0) {
      return; // å¦‚æœæ²’æœ‰æ¨™é¡Œï¼Œä¸é¡¯ç¤ºç›®éŒ„
    }

    // ç”Ÿæˆç›®éŒ„
    function generateTOC() {
      const tocItems = [];
      
      headings.forEach((heading, index) => {
        // ç‚ºæ¨™é¡Œæ·»åŠ  IDï¼ˆå¦‚æœæ²’æœ‰çš„è©±ï¼‰
        if (!heading.id) {
          heading.id = `heading-${index}`;
        }
        
        const level = heading.tagName.toLowerCase();
        const text = heading.textContent.trim();
        const id = heading.id;
        
        tocItems.push({
          level,
          text,
          id,
          element: heading
        });
      });
      
      return tocItems;
    }

    // æ¸²æŸ“ç›®éŒ„
    function renderTOC(items) {
      const listItems = items.map(item => {
        return `
          <li>
            <a href="#${item.id}" class="toc-${item.level}" data-target="${item.id}">
              ${item.text}
            </a>
          </li>
        `;
      }).join('');
      
      tocList.innerHTML = listItems;
    }

    // å¹³æ»‘æ»¾å‹•åˆ°ç›®æ¨™
    function smoothScrollTo(target) {
      const element = document.getElementById(target);
      if (element) {
        // ä½¿ç”¨æ›´ç²¾ç¢ºçš„è¨ˆç®—æ–¹æ³•
        const rect = element.getBoundingClientRect();
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        const elementTop = rect.top + scrollTop;
        const offset = 100; // å›ºå®šåç§»é‡
        
        window.scrollTo({
          top: Math.max(0, elementTop - offset),
          behavior: 'smooth'
        });
      }
    }

    // æ›´æ–°æ´»å‹•ç‹€æ…‹ï¼ˆç°¡åŒ–ç‰ˆï¼Œåƒ…åœ¨é»æ“Šæ™‚æ›´æ–°ï¼‰
    function updateActiveState(targetId) {
      const tocLinks = tocList.querySelectorAll('a');
      
      // ç§»é™¤æ‰€æœ‰æ´»å‹•ç‹€æ…‹
      tocLinks.forEach(link => link.classList.remove('active'));
      
      // æ·»åŠ æ´»å‹•ç‹€æ…‹åˆ°é»æ“Šçš„é …ç›®
      if (targetId) {
        const activeLink = tocList.querySelector(`a[data-target="${targetId}"]`);
        if (activeLink) {
          activeLink.classList.add('active');
        }
      }
    }

    // åˆå§‹åŒ–ç›®éŒ„
    const tocItems = generateTOC();
    renderTOC(tocItems);
    
    // é¡¯ç¤ºç›®éŒ„å®¹å™¨
    tocContainer.classList.add('visible');

    // ç¶å®šé»æ“Šäº‹ä»¶
    tocList.addEventListener('click', function(e) {
      e.preventDefault();
      const link = e.target.closest('a');
      if (link) {
        const target = link.getAttribute('data-target');
        smoothScrollTo(target);
        updateActiveState(target);
      }
    });
  }

  // å¤šç¨®æ–¹å¼ç¢ºä¿è…³æœ¬åŸ·è¡Œ
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTableOfContents);
  } else {
    // DOM å·²ç¶“åŠ è¼‰å®Œæˆ
    initTableOfContents();
  }
  
  // å‚™ç”¨æ–¹æ¡ˆï¼šé é¢å®Œå…¨åŠ è¼‰å¾Œå†æ¬¡å˜—è©¦
  window.addEventListener('load', function() {
    setTimeout(initTableOfContents, 100);
  });
  
  // Astro é é¢åˆ‡æ›å¾Œé‡æ–°åˆå§‹åŒ–
  document.addEventListener('astro:page-load', initTableOfContents);
</script>